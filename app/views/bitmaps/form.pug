extends ../layout/layout
block content
  form(method="POST", action="/bitmaps/save")
    if !!kb.key
      input(type="hidden", name="old_key", value=kb.key)
    div(class="row")
      div(class="col-md-6")
        div(class="form-group")
          label(for="kb-key") Klucz
          input(id="kb-key", class="form-control", type="text", name="key", maxlength="20", placeholder="Klucz", value=kb.key, required)
      div(class="col-md-6")
        div(class="form-group")
          label(for="kb-value") Wartość w bitach
          input(id="kb-value", class="form-control", type="text", name="bits", maxlength="32", placeholder="Wartość w bitach", value=kb.bits, onkeypress="return !!~[48,49].indexOf(event.charCode)", required)
    div(class="row")
      div(class="col-md-2")
        a(class="btn btn-primary top25 btn-block", href="/bitmaps/")
          i(class="fa fa-hand-o-left")
          span Wróć
      div(class="col-md-offset-8 col-md-2")
        button(class="btn btn-success top25 btn-block", type="submit") 
          i(class="fa fa-save")
          span Zapisz
