extends ../layout/layout
block content
  div(class="row")
    div(class="col-md-12")
      table(class="table")
        thead
          tr
            th Lp.
            th Klucz
            th Wartość
            th Zniknie za
            th Akcje
        tbody
          each kv, index in keys
            tr
              td= (index+1)+"."
              td= kv.key
              td= kv.value
              td= kv.time
              td
                div(class="btn-group")
                  if kv.calculatable
                    a(href=`/strings/increment/${kv.key}`, class="btn btn-warning btn-sm") 
                      i(class="fa fa-plus")
                      span 1
                  a(href=`/strings/update/${kv.key}`, class="btn btn-primary btn-sm") 
                    i(class="fa fa-edit")
                    span Edytuj
                  a(href=`/strings/delete/${kv.key}`, class="btn btn-danger btn-sm")
                    i(class="fa fa-trash-o")
                    span Usuń
                  if kv.calculatable
                    a(href=`/strings/decrement/${kv.key}`, class="btn btn-warning btn-sm") 
                      i(class="fa fa-minus")  
                      span 1
                
  div(class="row")
    div(class="col-md-offset-10 col-md-2")
      a(href="/strings/create", class="btn btn-success btn-block")
        i(class="fa fa-plus")
        span Nowy
